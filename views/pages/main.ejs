<!DOCTYPE html>
<html lang="en">
<header>
  <% include ../partials/header %>
</header>

<body>
  <div class="content">
    <h3 class="title">SELLING TOYS</h3>
    <div class="btn-add">
      <a href="/products/add">ADD PRODUCT</a>
    </div>
    <table cellpadding="0" cellspacing="0">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Image</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Action</th>
      </tr>

      <% data.forEach(function(item){ %>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td>
            <%= item.name %>
          </td>
          <td>
            <img src="<%= item.imgUrl %>" alt="" width="100" height="100">
          </td>
          <td>
            <%= item.price %>
          </td>
          <td>
            <%= item.quantity %>
          </td>
          <td>
            <a href="products/<%= item.id %>/delete">Delete</a>
          </td>
        </tr>
        <% }); %>
    </table>
  </div>
</body>

</html>